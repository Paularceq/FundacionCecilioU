@model Web.Models.Volunteer.ManageHoursViewModel

@{
    ViewData["Title"] = "Gestión de Horas de Voluntariado";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section Styles {
    <style>
        body {
            background-color: #e3e6eb;
        }

        .table-wrapper {
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
            padding: 1rem;
        }

        .table-hover tbody tr:hover {
            background-color: #f9f9f9;
            transition: background-color 0.2s ease-in-out;
        }

        .table thead th {
            text-align: center !important;
            vertical-align: middle !important;
            background-color: #f8f9fa;
            font-weight: 600;
            font-size: 0.85rem;
            color: #333;
        }

        .table td {
            vertical-align: middle;
            text-align: center !important;
        }

        .badge {
            font-size: 0.8rem;
        }

        .dropdown-menu li a i {
            width: 16px;
        }

        .btn {
            border-radius: 6px;
        }

        .empty-state {
            text-align: center;
            padding: 3rem 1rem;
        }

            .empty-state i {
                font-size: 4rem;
                color: #dee2e6;
                margin-bottom: 1rem;
            }

        .modal-content {
            border-radius: 12px;
            border: none;
        }

        .modal-header {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            color: white;
            border-radius: 12px 12px 0 0;
            border: none;
        }

            .modal-header .btn-close {
                filter: brightness(0) invert(1);
            }

        .delete-icon {
            font-size: 3rem;
            color: #dc3545;
            margin-bottom: 1rem;
        }
    </style>
}

<div class="container">
    <div class="mb-4">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
            <h1 class="h3 fw-bold d-flex align-items-center text-primary">
                <i class="fas fa-clock me-2"></i> Gestión de Horas - @Model.VolunteerName
            </h1>

            <div class="d-flex flex-wrap align-items-center gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Volver a Solicitudes
                </a>
                @if (Model.CanAddMore)
                {
                    <a asp-action="AddHours" asp-route-requestId="@Model.RequestId" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Registrar Horas
                    </a>
                }
                else
                {
                    <button class="btn btn-secondary" disabled title="No puedes agregar más horas">
                        <i class="fas fa-plus me-2"></i>Registrar Horas
                    </button>
                }
            </div>
        </div>
    </div>

    <div class="table-wrapper">
        @if (Model.HoursList.Any())
        {
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="mb-0">
                    Registros de Horas (@Model.HoursList.Count)
                </h5>
                <div class="text-muted small">
                    Total trabajado: <strong>@Model.TotalHoursWorked.ToString("N1")h</strong>
                </div>
            </div>

            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Fecha</th>
                        <th>Horario</th>
                        <th>Total Horas</th>
                        <th>Actividades</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var hours in Model.HoursList.OrderByDescending(h => h.Date))
                    {
                        <tr>
                            <td>
                                <strong>@hours.Date.ToString("dd/MM/yyyy")</strong>
                                <br><small class="text-muted">@hours.Date.ToString("dddd", new System.Globalization.CultureInfo("es-ES"))</small>
                            </td>
                            <td>
                                @hours.StartTime.ToString(@"hh\:mm") - @hours.EndTime.ToString(@"hh\:mm")
                            </td>
                            <td>
                                @hours.TotalHours.ToString("N1") h
                            </td>
                            <td>
                                <div style="max-width: 300px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; margin: 0 auto;"
                                     title="@hours.ActivitiesDescription">
                                    @hours.ActivitiesDescription
                                </div>
                                @if (!string.IsNullOrEmpty(hours.Notes))
                                {
                                    <br>
                                    <small class="text-muted">
                                        <i class="fas fa-sticky-note fa-xs"></i> Con notas
                                    </small>
                                }
                            </td>
                            <td>
                                @if (hours.State == Shared.Enums.VolunteerState.Pending)
                                {
                                    <span class="badge bg-warning">
                                        <i class="fas fa-hourglass-half me-1"></i> Pendiente
                                    </span>
                                }
                                else if (hours.State == Shared.Enums.VolunteerState.Approved)
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check me-1"></i> Aprobada
                                    </span>
                                    @if (hours.ApprovedAt.HasValue)
                                    {
                                        <br>
                                        <small class="text-muted">@hours.ApprovedAt.Value.ToString("dd/MM/yyyy")</small>
                                    }
                                }
                                else if (hours.State == Shared.Enums.VolunteerState.Rejected)
                                {
                                    <span class="badge bg-danger" title="@hours.RejectionReason">
                                        <i class="fas fa-times me-1"></i> Rechazada
                                    </span>
                                    @if (!string.IsNullOrEmpty(hours.RejectionReason))
                                    {
                                        <br>
                                        <small class="text-danger" title="@hours.RejectionReason">
                                            <i class="fas fa-info-circle me-1"></i>
                                            @(hours.RejectionReason.Length > 30 ? hours.RejectionReason.Substring(0, 30) + "..." : hours.RejectionReason)
                                        </small>
                                    }
                                }
                            </td>
                            <td>
                                @if (hours.State == Shared.Enums.VolunteerState.Pending || hours.State == Shared.Enums.VolunteerState.Rejected)
                                {
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fas fa-ellipsis-vertical fa-fw"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li>
                                                <a class="dropdown-item" asp-action="EditHours" asp-route-hoursId="@hours.Id">
                                                    <i class="fas fa-pen-to-square me-2 text-primary"></i>Editar
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider" /></li>
                                            <li>
                                                <a class="dropdown-item text-danger" href="javascript:void(0)"
                                                   onclick="showDeleteModal(@hours.Id, '@Model.RequestId', '@hours.Date.ToString("dd/MM/yyyy")', '@hours.StartTime.ToString(@"hh\:mm")', '@hours.EndTime.ToString(@"hh\:mm")')">
                                                    <i class="fas fa-trash-alt me-2"></i>Eliminar
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                }
                                else if (hours.State == Shared.Enums.VolunteerState.Approved)
                                {
                                    <span class="text-muted small">
                                        <i class="fas fa-lock me-1"></i>Aprobada
                                    </span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-clock"></i>
                <h5 class="mb-3">No hay registros de horas</h5>
                <p class="text-muted mb-4">Comienza registrando tus primeras horas de voluntariado</p>
                @if (Model.CanAddMore)
                {
                    <a asp-action="AddHours" asp-route-requestId="@Model.RequestId" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Registrar Primera Hora
                    </a>
                }
                else
                {
                    <p class="text-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        No puedes agregar más horas en esta solicitud
                    </p>
                }
            </div>
        }
    </div>
</div>

<!-- Modal de Confirmación de Eliminación -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <i class="fas fa-trash-alt delete-icon"></i>
                <h5 class="mb-3">¿Está seguro que desea eliminar este registro?</h5>
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Fecha:</strong> <span id="deleteDate"></span><br>
                    <strong>Horario:</strong> <span id="deleteTime"></span>
                </div>
                <p class="text-muted">Esta acción no se puede deshacer.</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancelar
                </button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <i class="fas fa-trash-alt me-2"></i>Eliminar
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let deleteHoursId = null;
        let deleteRequestId = null;

        function showDeleteModal(hoursId, requestId, date, startTime, endTime) {
            deleteHoursId = hoursId;
            deleteRequestId = requestId;

            document.getElementById('deleteDate').textContent = date;
            document.getElementById('deleteTime').textContent = startTime + ' - ' + endTime;

            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', function() {
            if (deleteHoursId && deleteRequestId) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("DeleteHours", "VolunteerRequest")';

                const hoursIdInput = document.createElement('input');
                hoursIdInput.type = 'hidden';
                hoursIdInput.name = 'hoursId';
                hoursIdInput.value = deleteHoursId;

                const requestIdInput = document.createElement('input');
                requestIdInput.type = 'hidden';
                requestIdInput.name = 'requestId';
                requestIdInput.value = deleteRequestId;

                const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]').cloneNode();

                form.appendChild(hoursIdInput);
                form.appendChild(requestIdInput);
                form.appendChild(tokenInput);

                document.body.appendChild(form);
                form.submit();
            }
        });
    </script>
    @Html.AntiForgeryToken()
}