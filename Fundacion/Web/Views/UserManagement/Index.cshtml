@model IEnumerable<Shared.Dtos.UsertoListDto>

@{
    ViewData["Title"] = "Usuarios";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    int userId = int.Parse(User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value);
}

<style>
    .table-hover tbody tr:hover {
        background-color: #f9f9f9;
        transition: background-color 0.2s ease-in-out;
    }

    .estado-label {
        border-radius: 999px;
        padding: 4px 12px;
        font-size: 0.75rem;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 fw-bold d-flex align-items-center">
        <i class="bi bi-people-fill me-2 text-primary"></i> Gestión de Usuarios
    </h1>

    <a asp-action="AddUser" class="btn btn-success btn-sm">
        <i class="bi bi-person-plus-fill"></i> Crear nuevo usuario
    </a>
</div>

<div class="mb-3">
    <input type="text" class="form-control form-control-sm w-25" placeholder="Buscar usuario...">
</div>

<table class="table table-bordered table-hover align-middle shadow-sm rounded-3">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Id)</th>
            <th>@Html.DisplayNameFor(model => model.First().Identificacion)</th>
            <th>@Html.DisplayNameFor(model => model.First().NombreCompleto)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.First().Nacionalidad)</th>
            <th class="text-center">Estado</th>

            <th class="text-center">Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Identificacion</td>
                <td>@item.NombreCompleto</td>
                <td>@item.Email</td>
                <td>@item.Nacionalidad</td>
                <td class="text-center">
                    <span class="fw-semibold estado-label d-inline-block"
                          style="color:@(item.Activo ? "#28a745" : "#dc3545");">
                        @(item.Activo ? "Activo" : "Inactivo")
                    </span>

                </td>
                <td class="text-center">
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                            Acción
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" asp-action="UpdateUser" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                            </li>
                            @if (item.Id != userId)
                            {

                                @if (item.Activo)
                                {
                                    <li>
                                        <a class="dropdown-item text-danger" asp-action="ChangeUserStatus" asp-route-id="@item.Id">
                                            <i class="bi bi-x-circle"></i> Desactivar
                                        </a>
                                    </li>
                                }
                                else

                                {
                                    <li>
                                        <a class="dropdown-item text-success" asp-action="ChangeUserStatus" asp-route-id="@item.Id">
                                            <i class="bi bi-check-circle"></i> Activar
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
