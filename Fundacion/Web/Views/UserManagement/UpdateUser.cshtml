@model Web.Models.UserManagement.UpdateUserViewModel

@{
    ViewData["Title"] = "Editar Usuario";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .form-check-pill input[type="checkbox"] {
        display: none;
    }

    .form-check-pill label {
        cursor: pointer;
        padding: 6px 12px;
        border-radius: 20px;
        border: 1px solid #ccc;
        margin: 4px;
        display: inline-block;
        background-color: #f8f9fa;
        transition: all 0.2s ease-in-out;
    }

    .form-check-pill input[type="checkbox"]:checked + label {
        background-color: #0d6efd;
        color: white;
        border-color: #0d6efd;
    }

    .form-check-pill label:hover {
        background-color: #e2e6ea;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm rounded-3 border-0">
                <div class="card-body">
                    <h2 class="h4 fw-bold mb-4 text-primary">
                        <i class="bi bi-pencil-square me-2"></i>Editar Usuario
                    </h2>

                    <form asp-action="UpdateUser">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Nombre" class="form-label">Nombre</label>
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Apellidos" class="form-label">Apellidos</label>
                                <input asp-for="Apellidos" class="form-control" />
                                <span asp-validation-for="Apellidos" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Nacionalidad" class="form-label">Nacionalidad</label>
                                <input asp-for="Nacionalidad" class="form-control" />
                                <span asp-validation-for="Nacionalidad" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Identificacion" class="form-label">Identificación</label>
                                <input asp-for="Identificacion" class="form-control" />
                                <span asp-validation-for="Identificacion" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Roles</label>
                            <div class="btn-group w-100 flex-wrap" role="group" aria-label="Seleccionar roles">
                                @for (int i = 0; i < Model.Roles.Count; i++)
                                {
                                    var role = Model.Roles[i];
                                    var isChecked = Model.SelectedRoles.Contains(role.Value);
                                    <input type="checkbox"
                                           class="btn-check"
                                           name="SelectedRoles"
                                           id="role_@i"
                                           value="@role.Value"
                                           @(isChecked ? "checked" : "") />
                                    <label class="btn btn-outline-primary m-1" for="role_@i">
                                        @role.Text
                                    </label>
                                }
                            </div>
                        </div>




                        <div class="d-flex justify-content-center gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-sm">
                                <i class="bi bi-save me-1"></i> Guardar
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
