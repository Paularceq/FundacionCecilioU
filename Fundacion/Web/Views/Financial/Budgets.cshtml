@model List<Shared.Dtos.Financial.BudgetDto>
@{
    ViewData["Title"] = "Presupuestos";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section Styles {
    <style>
        body { background-color: #e3e6eb; }
        .table-wrapper {
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            background-color: #fff;
            padding: 1.5rem;
            margin-bottom: 1rem;
        }
        .table thead th {
            text-align: center !important;
            vertical-align: middle !important;
            background-color: #f8f9fa;
            font-weight: 600;
            font-size: 0.85rem;
            color: #333;
        }
        .table td { vertical-align: middle; }
    </style>
}

<div class="container">
    <div class="mb-4 d-flex justify-content-between align-items-center">
        <h1 class="h3 fw-bold text-primary">
            <i class="fas fa-wallet me-2"></i> Presupuestos
        </h1>
        <a asp-action="AddBudget" class="btn btn-success">
            <i class="fas fa-plus"></i> Agregar Presupuesto
        </a>
    </div>

    <div class="table-wrapper">
        @if (Model != null && Model.Any())
        {
            <table class="table table-bordered table-hover align-middle">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Monto Original</th>
                        <th>Moneda</th>
                        <th>Inicio</th>
                        <th>Fin</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in Model)
                    {
                        <tr>
                            <td class="text-center">@b.Id</td>
                            <td class="text-end">@b.OriginalAmount.ToString("N2")</td>
                            <td class="text-center">@b.Currency</td>
                            <td class="text-center">@b.StartDate.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">@b.EndDate.ToString("dd/MM/yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <h5>No hay presupuestos registrados.</h5>
            </div>
        }
    </div>
</div>