@model Web.Models.Financial.FinancialMovementsFilterViewModel
@{
    ViewData["Title"] = "Movimientos Financieros";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section Styles {
    <style>
        body {
            background-color: #e3e6eb;
        }
        .stats-card, .table-wrapper {
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            background-color: #fff;
            padding: 1.5rem;
            margin-bottom: 1rem;
        }
        .table thead th {
            text-align: center !important;
            vertical-align: middle !important;
            background-color: #f8f9fa;
            font-weight: 600;
            font-size: 0.85rem;
            color: #333;
        }
        .table td {
            vertical-align: middle;
        }
    </style>
}

<div class="container">
    <div class="mb-4">
        <h1 class="h3 fw-bold text-primary">
            <i class="fas fa-money-check-alt me-2"></i> Movimientos Financieros
        </h1>
    </div>

    <!-- Filtro por fechas -->
    <div class="stats-card mb-4">
        <form asp-action="Movements" method="post" class="row g-3">
            <div class="col-md-4">
                <label for="From" class="form-label">Desde</label>
                <input asp-for="From" type="date" class="form-control" />
            </div>
            <div class="col-md-4">
                <label for="To" class="form-label">Hasta</label>
                <input asp-for="To" type="date" class="form-control" />
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search me-1"></i> Consultar
                </button>
            </div>
        </form>
    </div>

    <!-- Tabla de resultados -->
    <div class="table-wrapper">
        @if (Model.Movements != null && Model.Movements.Any())
        {
            <table class="table table-bordered table-hover align-middle">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Descripción</th>
                        <th>Monto</th>
                        <th>Moneda</th>
                        <th>Tipo</th>
                        <th>Fecha</th>
                        <th>Creado por</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model.Movements.OrderByDescending(x => x.Date))
                    {
                        <tr>
                            <td class="text-center">@m.Id</td>
                            <td>@m.Description</td>
                            <td class="text-end">@m.Amount.ToString("N2")</td>
                            <td class="text-center">@m.Currency</td>
                            <td class="text-center">
                                @if (m.Type == Shared.Enums.MovementType.Inbound)
                                {
                                    <span class="badge bg-success">Ingreso</span>
                                }
                                else if (m.Type == Shared.Enums.MovementType.Outbound)
                                {
                                    <span class="badge bg-danger">Egreso</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@m.Type</span>
                                }
                            </td>
                            <td class="text-center">@m.Date.ToString("dd/MM/yyyy")</td>
                            <td>@m.CreatedByName</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <h5>No se encontraron movimientos en el rango seleccionado.</h5>
            </div>
        }
    </div>
</div>