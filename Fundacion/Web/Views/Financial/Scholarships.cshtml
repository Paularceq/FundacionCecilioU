@model List<Shared.Dtos.Financial.ScholarshipWithPaymentStatusDto>
@{
    ViewData["Title"] = "Gestión de Becas";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section Styles {
    <style>
        body { background-color: #e3e6eb; }
        .table-wrapper {
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            background-color: #fff;
            padding: 1.5rem;
            margin-bottom: 1rem;
        }
        .table thead th {
            text-align: center !important;
            vertical-align: middle !important;
            background-color: #f8f9fa;
            font-weight: 600;
            font-size: 0.85rem;
            color: #333;
        }
        .table td { vertical-align: middle; }
    </style>
}

<div class="container">
    <div class="mb-4">
        <h1 class="h3 fw-bold text-primary">
            <i class="fas fa-graduation-cap me-2"></i> Gestión de Becas
        </h1>
    </div>

    <div class="mb-3">
        <form asp-action="ProcessPendingScholarships" method="post">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-money-check-alt me-1"></i> Procesar pago de todas las becas pendientes
            </button>
        </form>
    </div>

    <div class="table-wrapper">
        @if (Model != null && Model.Any())
        {
            <table class="table table-bordered table-hover align-middle">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Estudiante</th>
                        <th>Cédula</th>
                        <th>Monto</th>
                        <th>Moneda</th>
                        <th>Frecuencia</th>
                        <th>Inicio</th>
                        <th>Fin</th>
                        <th>Último Pago</th>
                        <th>Estado</th>
                        <th>Pendiente Pago</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model.OrderByDescending(x => x.Id))
                    {
                        <tr>
                            <td class="text-center">@s.Id</td>
                            <td>@s.NombreEstudiante</td>
                            <td>@s.CedulaEstudiante</td>
                            <td class="text-end">@s.Amount.ToString("N2")</td>
                            <td class="text-center">@s.Currency</td>
                            <td class="text-center">@s.Frequency</td>
                            <td class="text-center">@s.StartDate.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">@s.EndDate?.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">@s.LastPayment?.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (s.IsActive)
                                {
                                    <span class="badge bg-success">Activa</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactiva</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (s.IsPendingPayment)
                                {
                                    <span class="badge bg-warning">Pendiente</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="d-flex gap-1 justify-content-center">
                                    @if (s.IsPendingPayment)
                                    {
                                        <form asp-action="ProcessScholarshipPayment" method="post" style="display:inline;">
                                            <input type="hidden" name="scholarshipId" value="@s.Id" />
                                            <button type="submit" class="btn btn-sm btn-success" title="Procesar pago individual">
                                                <i class="fas fa-money-bill-wave"></i>
                                            </button>
                                        </form>
                                    }
                                    <form asp-action="SetScholarshipActiveStatus" method="post" style="display:inline;">
                                        <input type="hidden" name="scholarshipId" value="@s.Id" />
                                        <input type="hidden" name="isActive" value="@(s.IsActive ? "false" : "true")" />
                                        <button type="submit" class="btn btn-sm @(s.IsActive ? "btn-danger" : "btn-primary")" title="@(s.IsActive ? "Inactivar" : "Activar")">
                                            <i class="fas @(s.IsActive ? "fa-ban" : "fa-check")"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <h5>No hay becas registradas.</h5>
            </div>
        }
    </div>
</div>