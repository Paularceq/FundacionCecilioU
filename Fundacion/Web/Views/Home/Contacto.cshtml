@{
    ViewData["Title"] = "Contáctanos";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

<section class="py-5 bg-light">
    <div class="container px-5 my-5">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-primary">Contáctanos</h2>
            <p class="lead text-muted">¿Tienes preguntas, sugerencias o deseas colaborar? Estamos aquí para escucharte.</p>
        </div>

        <div class="row gx-5">
            <!-- Formulario de contacto -->
            <div class="col-md-6 mb-5">
                <form>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="name" type="text" placeholder="Nombre completo" />
                        <label for="name">Nombre</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="email" type="email" placeholder="nombre@ejemplo.com" />
                        <label for="email">Correo electrónico</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="subject" type="text" placeholder="Asunto" />
                        <label for="subject">Asunto</label>
                    </div>
                    <div class="form-floating mb-3">
<textarea class="form-control" id="message" placeholder="Escribe tu mensaje aquí..." style="height: 150px;"></textarea>
                        <label for="message">Mensaje</label>
                    </div>
                    <div class="d-grid">
                        <button class="btn btn-primary btn-lg" type="submit">Enviar Mensaje</button>
                    </div>
                </form>
            </div>

            <!-- Información de contacto -->
            <div class="col-md-6 mb-5 ps-md-5">
                <div class="bg-white p-4 rounded shadow-sm h-100">
                    <h5 class="fw-bold text-primary mb-3">Información de contacto</h5>
                    <p class="mb-2"><strong>Dirección:</strong> Frente a la Iglesia de Moravia, San José, Costa Rica</p>
                    <p class="mb-2"><strong>Teléfono:</strong> (506) 2256-0503</p>
                    <p class="mb-2"><strong>Correo:</strong> contacto@fundacioncecilio.cr</p>
                    <hr />
                    <p class="mb-2"><strong>Horario de atención:</strong><br />Lunes a Viernes, 9:00 a.m. - 5:00 p.m.</p>
                    <div class="mt-3">
                        <p class="mb-1"><strong>Síguenos:</strong></p>
                        <a href="https://www.facebook.com/profile.php?id=61576607051958" target="_blank" class="text-decoration-none me-3">
                            <i class="bi bi-facebook"></i> Facebook
                        </a>
                        <a href="#" class="text-decoration-none"><i class="bi bi-instagram"></i> Instagram</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
