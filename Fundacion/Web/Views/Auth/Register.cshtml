@using Shared.Constants
@using Web.Models.Auth
@model RegisterViewModel
@{
    ViewData["Title"] = "Registrarse";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="col-lg-7">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header"><h3 class="text-center font-weight-light my-4">Crear cuenta</h3></div>
        <div class="card-body">
            <form asp-action="Register" asp-controller="Auth" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mb-md-0">
                            <input asp-for="Nombre" class="form-control" placeholder="Ingresa tu nombre" /> 
                            <label asp-for="Nombre"></label>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Apellidos" class="form-control" placeholder="Ingresa tu apellido" />
                            <label asp-for="Apellidos"></label>
                            <span asp-validation-for="Apellidos" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Nacionalidad" class="form-control" placeholder="Ingresa tu nacionalidad" />
                    <label asp-for="Nacionalidad"></label>
                    <span asp-validation-for="Nacionalidad" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Identificacion" class="form-control" placeholder="Ingresa tu identificación" />
                    <label asp-for="Identificacion"></label>
                    <span asp-validation-for="Identificacion" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" placeholder="nombre@ejemplo.com" />
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Telefono" class="form-control" placeholder="88888888" />
                    <label asp-for="Telefono"></label>
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mb-md-0">
                            <input asp-for="Password" class="form-control" placeholder="Crea una contraseña" />
                            <label asp-for="Password"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mb-md-0">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirma la contraseña" />
                            <label asp-for="ConfirmPassword"></label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    
                </div>
                <div class="mb-3">
                    <div>Registrarme como:</div>
                    <input type="radio" value="@Roles.Estudiante" class="btn-check" name="Role" id="Estudiante" autocomplete="off" checked>
                    <label class="btn btn-outline-primary" for="Estudiante">Estudiante</label>

                    <input type="radio" value="@Roles.Voluntario" class="btn-check" name="Role" id="Voluntario" autocomplete="off">
                    <label class="btn btn-outline-primary" for="Voluntario">Voluntario</label>
                        </div>
                <div class="mt-4 mb-0">
                    <div class="d-grid"><button type="submit" class="btn btn-primary btn-block">Crear cuenta</button></div>
                </div>
            </form>
        </div>
        <div class="card-footer text-center py-3">
            <div class="small"><a asp-controller="Auth" asp-action="Login">¿Ya tienes una cuenta? Inicia sesión</a></div>
        </div>
    </div>
</div>

@section Scripts {

    @await Html.PartialAsync("_ValidationScriptsPartial")
}
