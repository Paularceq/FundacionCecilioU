@model Web.Models.Becas.SolicitudBecaViewModel

@{
    ViewData["Title"] = "Formulario de Solicitud de Beca";
}


<h2 class="mb-4">Formulario de Solicitud de Beca</h2>

<form asp-action="Crear" asp-controller="SolicitudBeca" method="post" enctype="multipart/form-data">
    <div class="form-group mb-3">
        <label asp-for="CedulaEstudiante"></label>
        <input asp-for="CedulaEstudiante" class="form-control" />
        <span asp-validation-for="CedulaEstudiante" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="NombreEstudiante"></label>
        <input asp-for="NombreEstudiante" class="form-control" />
        <span asp-validation-for="NombreEstudiante" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CorreoContacto"></label>
        <input asp-for="CorreoContacto" class="form-control" />
        <span asp-validation-for="CorreoContacto" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="TelefonoContacto"></label>
        <input asp-for="TelefonoContacto" class="form-control" />
        <span asp-validation-for="TelefonoContacto" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Direccion"></label>
        <textarea asp-for="Direccion" class="form-control"></textarea>
        <span asp-validation-for="Direccion" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Colegio"></label>
        <input asp-for="Colegio" class="form-control" />
        <span asp-validation-for="Colegio" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="NivelEducativo"></label>
        <input asp-for="NivelEducativo" class="form-control" />
        <span asp-validation-for="NivelEducativo" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CartaConsentimiento">Carta de consentimiento (PDF o imagen):</label>
        <input asp-for="CartaConsentimiento" class="form-control" type="file" accept=".pdf,.jpg,.jpeg,.png" />
        <span asp-validation-for="CartaConsentimiento" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="CartaNotas">Carta de notas (PDF o imagen):</label>
        <input asp-for="CartaNotas" class="form-control" type="file" accept=".pdf,.jpg,.jpeg,.png" />
        <span asp-validation-for="CartaNotas" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar Solicitud</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
