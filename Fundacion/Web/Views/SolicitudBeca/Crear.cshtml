@model Web.Models.Becas.SolicitudBecaViewModel

@{
    ViewData["Title"] = "Solicitud de Beca";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    body {
        background-color: #12263a;
    }

    .card {
        background-color: #fff;
        border-radius: 16px;
        padding: 30px;
        margin-top: 60px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-body">
                    <h2 class="h4 fw-bold mb-4 text-primary text-center">
                        <i class="bi bi-journal-plus me-2"></i>Solicitud de Beca
                    </h2>

                    <form asp-action="Crear" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="NombreEstudiante" class="form-label">Nombre del Estudiante</label>
                                <input asp-for="NombreEstudiante" class="form-control" />
                                <span asp-validation-for="NombreEstudiante" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="CedulaEstudiante" class="form-label">Cédula del Estudiante</label>
                                <input asp-for="CedulaEstudiante" class="form-control" />
                                <span asp-validation-for="CedulaEstudiante" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TelefonoContacto" class="form-label">Teléfono del Encargado</label>
                                <input asp-for="TelefonoContacto" class="form-control" />
                                <span asp-validation-for="TelefonoContacto" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Direccion" class="form-label">Dirección</label>
                                <input asp-for="Direccion" class="form-control" />
                                <span asp-validation-for="Direccion" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Colegio" class="form-label">Institución Educativa</label>
                                <input asp-for="Colegio" class="form-control" />
                                <span asp-validation-for="Colegio" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="CartaConsentimiento" class="form-label">Carta de Consentimiento (imagen)</label>
                                <input asp-for="CartaConsentimiento" type="file" class="form-control" />
                                <span asp-validation-for="CartaConsentimiento" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="CartaNotas" class="form-label">Carta de Notas (imagen)</label>
                                <input asp-for="CartaNotas" type="file" class="form-control" />
                                <span asp-validation-for="CartaNotas" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-center gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-sm">
                                <i class="bi bi-send-check me-1"></i> Enviar Solicitud
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Logo -->
    <div class="text-center mt-5 mb-4">
        <img src="~/img/Logo.png" alt="Logo Fundación" style="max-height: 80px;" />
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}