@model IEnumerable<Web.Models.Becas.SolicitudBecaViewModel>

@{
    ViewData["Title"] = "Ver Becas Registradas";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section Styles {
    <style>
        body {
            background-color: #e3e6eb;
        }

        .table-wrapper {
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
            padding: 1rem;
        }

        .table-hover tbody tr:hover {
            background-color: #f9f9f9;
            transition: background-color 0.2s ease-in-out;
        }

        .table thead th {
            text-align: center !important;
            vertical-align: middle !important;
            background-color: #f8f9fa;
            font-weight: 600;
            font-size: 0.85rem;
            color: #333;
        }

        .table td {
            vertical-align: middle;
        }

        .btn {
            border-radius: 6px;
        }

        .badge {
            font-size: 0.8rem;
        }

        .dropdown .btn-light {
            padding: 0.25rem 0.5rem;
        }
    </style>
}

<div class="container mt-4">
    <div class="mb-4">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
            <h1 class="h3 fw-bold d-flex align-items-center text-primary">
                <i class="fas fa-user-graduate me-2"></i> Ver Becas Registradas
            </h1>
        </div>
    </div>

    <div class="table-wrapper">
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Cédula</th>
                    <th>Nombre estudiante</th>
                    <th>Grado</th>
                    <th>Estado</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var badgeClass = item.Estado switch
                    {
                        "Pendiente" => "bg-warning text-dark",
                        "Aprobada" => "bg-success",
                        "Denegada" => "bg-danger",
                        _ => "bg-secondary"
                    };

                    <tr>
                        <td>@item.CedulaEstudiante</td>
                        <td>@item.NombreEstudiante</td>
                        <td>@item.NivelEducativo</td>
                        <td class="text-center">
                            <span class="badge @badgeClass">
                                @item.Estado
                            </span>
                        </td>
                        <td class="text-center">
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary"
                                        type="button"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                    <i class="fas fa-ellipsis-vertical"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a href="#"
                                           class="dropdown-item view-details-btn"
                                           data-id="@item.Id">
                                            <i class="fas fa-circle-info fa-fw me-2 text-secondary"></i>
                                            Detalles
                                        </a>
                                    </li>
                                    <li>
                                          <a href="#"
                                               class="dropdown-item decision-btn"
                                                data-cedula="@item.CedulaEstudiante">
                                              <a asp-action="TomarDecision"
                                                    asp-route-cedula="@item.CedulaEstudiante"
                                                    class="dropdown-item">
                                                <i class="fas fa-gavel fa-fw me-2 text-secondary"></i>
                                                Tomar una decisión
                                            </a>
                                    </li>
                                </ul>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal vacío para inyectar detalles -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" id="modalContent">
            <!-- Aquí se cargará el _DetailsPartial -->
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}