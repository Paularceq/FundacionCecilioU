
@{
    ViewData["Title"] = "Vista previa de solicitud de beca";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section Styles {
    <style>
        body {
            background-color: #e3e6eb;
        }

        .preview-wrapper {
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
            padding: 1.5rem;
        }

        .preview-header {
            background-color: #0d6efd;
            color: white;
            padding: 0.75rem 1rem;
            border-radius: 8px 8px 0 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .preview-body {
            padding: 1rem;
        }

            .preview-body strong {
                color: #333;
            }

        .action-buttons form {
            display: inline-block;
            margin-right: 0.5rem;
        }

        .dropdown-menu a {
            font-size: 0.9rem;
        }
    </style>
}

<div class="container">
    <div class="mb-4">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
            <h1 class="h3 fw-bold d-flex align-items-center text-primary">
                <i class="fas fa-user-graduate me-2"></i> Vista previa de solicitud
            </h1>
        </div>
    </div>

    <div class="preview-wrapper">
        <div class="preview-header">
            <h5 class="mb-0"><i class="fas fa-id-card me-2"></i> Solicitud de beca</h5>
            <div class="dropdown">
                <button class="btn btn-sm btn-light text-primary" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-ellipsis-vertical"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <a class="dropdown-item" asp-action="Details" asp-route-id="@Model.Id">
                            <i class="fas fa-circle-info me-2 text-secondary"></i> Detalles
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-action="Edit" asp-route-id="@Model.Id">
                            <i class="fas fa-pen-to-square me-2 text-secondary"></i> Editar
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="preview-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Cédula del estudiante:</strong><br />
                    @Model.CedulaEstudiante
                </div>
                <div class="col-md-6">
                    <strong>Nombre completo:</strong><br />
                    @Model.NombreEstudiante
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Correo de contacto:</strong><br />
                    @Model.CorreoContacto
                </div>
                <div class="col-md-6">
                    <strong>Teléfono de contacto:</strong><br />
                    @Model.TelefonoContacto
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-12">
                    <strong>Dirección:</strong><br />
                    @Model.Direccion
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Colegio:</strong><br />
                    @Model.Colegio
                </div>
                <div class="col-md-6">
                    <strong>Nivel educativo:</strong><br />
                    @Model.NivelEducativo
                </div>
            </div>

            <div class="row mt-4">
                <div class="col text-center action-buttons">
                    <form asp-action="CambiarEstado" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <input type="hidden" name="nuevoEstado" value="Aprobada" />
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-check-circle me-1"></i> Aprobar
                        </button>
                    </form>

                    <form asp-action="CambiarEstado" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <input type="hidden" name="nuevoEstado" value="En revisión" />
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-search me-1"></i> Revisar
                        </button>
                    </form>

                    <form asp-action="CambiarEstado" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <input type="hidden" name="nuevoEstado" value="Denegada" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-times-circle me-1"></i> Denegar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
