@using Shared.Extensions
@model Web.Models.Inventory.InventoryMovementViewModel

@{
    ViewData["Title"] = "Agregar Stock";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container">
    <h1 class="h2 mb-4">Agregar stock al producto</h1>

    <form method="post" class="border p-4 rounded shadow-sm bg-light">
        <!-- Información del producto (solo lectura) -->
        <div class="mb-3">
            <label asp-for="ProductName" class="form-label"><i class="fas fa-box me-2"></i>Producto</label>
            <input asp-for="ProductName" class="form-control" readonly />
        </div>

        <div class="mb-3 row">
            <div class="col-md-4">
                <label asp-for="UnitOfMeasure" class="form-label"></label>
                <input for="UnitOfMeasure" class="form-control" value="@Model.UnitOfMeasure.GetDescription()" readonly />
            </div>
            <div class="col-md-4">
                <label asp-for="MinimumStock" class="form-label"></label>
                <input asp-for="MinimumStock" class="form-control" readonly />
            </div>
            <div class="col-md-4">
                <label asp-for="CurrentStock" class="form-label"></label>
                <input asp-for="CurrentStock" class="form-control" readonly />
            </div>
        </div>


        <!-- Movimiento de inventario -->
        <input type="hidden" asp-for="ProductId" />

        <div class="mb-3">
            <label asp-for="Quantity" class="form-label"><i class="fas fa-arrow-up me-2"></i>Cantidad a agregar</label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Comment" class="form-label"><i class="fas fa-comment-dots me-2"></i>Comentario</label>
            <textarea asp-for="Comment" class="form-control" rows="3" placeholder="Ej: Reposición por donación, compra, etc."></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-check me-2"></i>Agregar al inventario
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
