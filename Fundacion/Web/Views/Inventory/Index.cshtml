@using Shared.Dtos.Inventory
@using Shared.Extensions
@model IEnumerable<ProductWithStockDto>

@{
    ViewData["Title"] = "Inventario";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section Styles {
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #e3e6eb;
        }

        .table-wrapper {
            overflow: hidden;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
            padding: 1rem;
        }

        .table-hover tbody tr:hover {
            background-color: #f9f9f9;
            transition: background-color 0.2s ease-in-out;
        }

        .table thead th {
            text-align: center !important;
            vertical-align: middle !important;
            background-color: #f8f9fa;
            font-weight: 600;
            font-size: 0.85rem;
            color: #333;
        }

        .table td {
            vertical-align: middle;
        }

        .badge {
            font-size: 0.8rem;
        }

        .dropdown-menu li a i {
            width: 16px;
        }

        .btn {
            border-radius: 6px;
        }
    </style>
}

<div class="container">
    <div class="mb-4">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
            <h1 class="h3 fw-bold d-flex align-items-center text-primary">
                <i class="fas fa-boxes-stacked me-2"></i> Inventario de productos
            </h1>

            <div class="d-flex flex-wrap align-items-center gap-2">
                <a asp-action="RegisterProduct" class="btn btn-success">
                    <i class="fa-solid fa-cart-flatbed me-2"></i> Registrar producto
                </a>
                <div id="customFilterContainer" class="flex-grow-1" style="min-width: 250px;"></div>
            </div>
        </div>
    </div>

    <div class="table-wrapper">
        <table class="table table-bordered table-hover align-middle" id="inventoryTable">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                    <th>@Html.DisplayNameFor(model => model.First().UnitOfMeasure)</th>
                    <th>@Html.DisplayNameFor(model => model.First().MinimumStock)</th>
                    <th>@Html.DisplayNameFor(model => model.First().CurrentStock)</th>
                    <th>@Html.DisplayNameFor(model => model.First().IsLowStock)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.UnitOfMeasure.GetDescription()</td>
                        <td>@item.MinimumStock</td>
                        <td>@item.CurrentStock</td>
                        <td>
                            @if (item.IsLowStock)
                            {
                                <span class="badge bg-danger">
                                    <i class="fas fa-triangle-exclamation me-1"></i> Bajo
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check-circle me-1"></i> Suficiente
                                </span>
                            }
                        </td>
                        <td class="text-center">
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-ellipsis-vertical fa-fw"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-action="EditProduct" asp-route-id="@item.Id">
                                            <i class="fas fa-pen-to-square me-2 text-primary"></i>Editar
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-action="ProductDetails" asp-route-id="@item.Id">
                                            <i class="fas fa-circle-info me-2 text-secondary"></i>Detalles
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-action="AddStock" asp-route-id="@item.Id">
                                            <i class="fas fa-plus me-2 text-success"></i>Agregar stock
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-action="WithdrawStock" asp-route-id="@item.Id">
                                            <i class="fas fa-minus me-2 text-warning"></i>Retirar stock
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id">
                                            <i class="fas fa-trash-alt me-2"></i>Eliminar
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            const table = $('#inventoryTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                },
                columnDefs: [
                    { orderable: false, targets: -1 }
                ],
                pageLength: 10,
                lengthChange: false,
                responsive: true,
                initComplete: function () {
                    const filter = $('#inventoryTable_filter');
                    filter.appendTo('#customFilterContainer');

                    filter.find('label').contents().filter(function () {
                        return this.nodeType === 3;
                    }).remove();

                    const input = filter.find('input[type="search"]');
                    input.attr('placeholder', 'Buscar');
                    input.wrap('<div class="input-group"></div>');
                    input.before(`
                        <span class="input-group-text" id="basic-addon1">
                            <i class="fas fa-search"></i>
                        </span>
                    `);
                    input.removeClass('form-control-sm');
                }
            });
        });
    </script>
}
