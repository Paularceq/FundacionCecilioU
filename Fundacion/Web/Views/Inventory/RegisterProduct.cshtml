@model Web.Models.Inventory.RegisterProductViewModel

@{
    ViewData["Title"] = "Registrar Producto";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container">
    <h2 class="mb-4">Registrar nuevo producto</h2>

    <form method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Nombre del producto</label>
            <input asp-for="Name" class="form-control" placeholder="Ej: Arroz blanco" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Campos agrupados responsivamente -->
        <div class="row">
            <div class="mb-3 col-12 col-lg-4">
                <label asp-for="SelectedUnitOfMeasure" class="form-label">Unidad de medida</label>
                <select asp-for="SelectedUnitOfMeasure" class="form-select" asp-items="Model.UnitsOfMeasure">
                    <option value="">Seleccione una opción...</option>
                </select>
                <span asp-validation-for="SelectedUnitOfMeasure" class="text-danger"></span>
            </div>

            <div class="mb-3 col-12 col-lg-4">
                <label asp-for="MinimumStock" class="form-label">Stock mínimo</label>
                <input asp-for="MinimumStock" class="form-control" placeholder="Ej: 50" />
                <span asp-validation-for="MinimumStock" class="text-danger"></span>
            </div>

            <div class="mb-3 col-12 col-lg-4">
                <label asp-for="InitialQuantity" class="form-label">Cantidad inicial</label>
                <input asp-for="InitialQuantity" class="form-control" placeholder="Ej: 100" />
                <span asp-validation-for="InitialQuantity" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Comment" class="form-label">Comentario</label>
            <textarea asp-for="Comment" class="form-control" rows="3" placeholder="Ej: Stock inicial donado por X"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-success">
                Registrar producto
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
