@model Web.Models.Inventory.EditProductViewModel

@{
    ViewData["Title"] = "Editar producto";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container">
    <h2 class="mb-4">
        <i class="fas fa-pen-to-square me-2"></i> Editar producto
    </h2>

    <form asp-action="EditProduct" method="post" novalidate>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SelectedUnitOfMeasure" class="form-label"></label>
            <select asp-for="SelectedUnitOfMeasure" asp-items="Model.UnitsOfMeasure" class="form-select">
                <option value="">Seleccione una unidad</option>
            </select>
            <span asp-validation-for="SelectedUnitOfMeasure" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MinimumStock" class="form-label"></label>
            <input asp-for="MinimumStock" class="form-control" />
            <span asp-validation-for="MinimumStock" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i> Volver
            </a>
            <button type="submit" class="btn btn-success">
                <i class="fas fa-floppy-disk me-2"></i> Guardar cambios
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
