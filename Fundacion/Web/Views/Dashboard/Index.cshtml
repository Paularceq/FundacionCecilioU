@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims

@{
    ViewData["Title"] = "Perfil de Usuario";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var claimsIdentity = User.Identity as ClaimsIdentity;
    var claims = claimsIdentity?.Claims;
}

<style>
    .foundation-hero {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 75vh; /* Puedes ajustar a 80vh o más si quieres más espacio vertical */
        padding-top: 40px; /* Espacio superior adicional si lo deseas */
    }

    .foundation-logo {
        max-height: 220px;
        margin-bottom: 25px;
    }

    .foundation-name {
        font-size: 2.7rem;
        font-weight: bold;
        color: #003366;
        margin-bottom: 0.5rem;
    }

    .foundation-slogan {
        font-size: 1.3rem;
        color: #1e3a5f;
        font-style: italic;
    }

</style>

<div class="foundation-hero">
    <div class="text-center">
        <img src="~/img/Logo.png" alt="Logo Fundación Cecilio Umaña" class="img-fluid foundation-logo" />
        <h1 class="foundation-name">Fundación Cecilio Umaña</h1>
        <p class="foundation-slogan">La educación transforma vidas</p>
    </div>
</div>



